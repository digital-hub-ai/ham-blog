        <link rel="icon" href="/favicon.ico" />
      </Head>

      {/* Cosmic Background */}
      <div className="absolute inset-0 z-0">
        {/* Starfield Background */}
        <div className="absolute inset-0 bg-gradient-to-br from-black via-purple-900 to-black"></div>
        
        {/* Animated Particles */}
        <div className="absolute inset-0">
          {[...Array(100)].map((_, i) => (
            <div
              key={i}
              className="absolute rounded-full bg-white animate-pulse"
              style={{
                left: `${Math.random() * 100}%`,
                top: `${Math.random() * 100}%`,
                width: `${Math.random() * 3 + 1}px`,
                height: `${Math.random() * 3 + 1}px`,
                opacity: Math.random() * 0.8 + 0.2,
                animationDuration: `${Math.random() * 3 + 2}s`,
              }}
            ></div>
          ))}
        </div>
        
        {/* Cosmic Gradient Overlay */}
        <div className="absolute inset-0 bg-gradient-conic from-blue-500 via-purple-600 to-indigo-800 opacity-30 animate-spin" 
             style={{ animationDuration: "30s" }}></div>
      </div>

      {/* Portal Content */}
      <div className="relative z-10 min-h-screen flex flex-col items-center justify-center p-4 text-center">
        {/* Portal Entrance Effect */}
        <div className="absolute inset-0 flex items-center justify-center pointer-events-none">
          <div className="w-96 h-96 rounded-full border-2 border-blue-500 animate-ping opacity-20"></div>
          <div className="absolute w-80 h-80 rounded-full border border-purple-500 animate-ping opacity-30" 
               style={{ animationDelay: "0.5s" }}></div>
          <div className="absolute w-64 h-64 rounded-full border border-indigo-500 animate-ping opacity-40" 
               style={{ animationDelay: "1s" }}></div>
        </div>

        <main className="flex flex-col items-center justify-center w-full max-w-4xl">
          {/* Cosmic Greeting */}
