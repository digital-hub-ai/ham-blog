    const drawGalaxy = () => {
      ctx.clearRect(0, 0, galaxy.width, galaxy.height);
      
      // Draw galactic center
      const centerGradient = ctx.createRadialGradient(
        galaxy.width/2, galaxy.height/2, 0,
        galaxy.width/2, galaxy.height/2, 50
