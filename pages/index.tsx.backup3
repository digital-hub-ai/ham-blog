        armGradient.addColorStop(1, 'rgba(100, 100, 255, 0)');
        
        ctx.fillStyle = armGradient;
        ctx.beginPath();
        ctx.moveTo(0, 0);
        ctx.bezierCurveTo(50, -20, 100, 20, 150, 0);
        ctx.bezierCurveTo(100, 20, 50, -20, 0, 0);
        ctx.fill();
        
