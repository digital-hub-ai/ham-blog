import React, { useState, useEffect, useRef } from "react";
import Head from "next/head";

export default function UltraPremiumCosmicPortal() {
  const [currentText, setCurrentText] = useState("");
  const [isDeleting, setIsDeleting] = useState(false);
  const [loopNum, setLoopNum] = useState(0);
  const [typingSpeed, setTypingSpeed] = useState(150);
  const [mousePosition, setMousePosition] = useState({ x: 0, y: 0 });
  const [time, setTime] = useState(new Date());
  const canvasRef = useRef(null);
  const galaxyRef = useRef(null);

  const texts = [
    "Discover the Infinite Blogging Cosmos",
    "Navigate Through 15,000+ AI-Powered Articles", 
    "Command the Ultimate Knowledge Engine",
    "Shape the Future of Digital Storytelling"
