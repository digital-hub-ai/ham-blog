.luminaCore {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200px;
  height: 200px;
  perspective: 1000px;
  z-index: 9999;
  pointer-events: none;
}

.crystalContainer {
  position: absolute;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  animation: float 8s ease-in-out infinite;
  transition: transform 0.1s ease-out;
}

.crystal {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transform: rotateX(20deg) rotateY(25deg) rotateZ(15deg);
}

.crystalFace {
  position: absolute;
  width: 200px;
  height: 200px;
  background: rgba(0, 243, 255, 0.1);
  border: 1px solid rgba(0, 243, 255, 0.3);
  border-radius: 5px;
  backdrop-filter: blur(5px);
  transition: all 0.3s ease;
}

/* Crystal faces positioning */
.crystalFace:nth-child(1) {
  transform: rotateY(0deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(0, 243, 255, 0.2), rgba(157, 78, 221, 0.1));
}

.crystalFace:nth-child(2) {
  transform: rotateY(90deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(157, 78, 221, 0.2), rgba(255, 0, 255, 0.1));
}

.crystalFace:nth-child(3) {
  transform: rotateY(180deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(255, 0, 255, 0.2), rgba(255, 255, 0, 0.1));
}

.crystalFace:nth-child(4) {
  transform: rotateY(-90deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(255, 255, 0, 0.2), rgba(0, 243, 255, 0.1));
}

.crystalFace:nth-child(5) {
  transform: rotateX(90deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(0, 243, 255, 0.2), rgba(157, 78, 221, 0.1));
}

.crystalFace:nth-child(6) {
  transform: rotateX(-90deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(157, 78, 221, 0.2), rgba(255, 0, 255, 0.1));
}

.crystalFace:nth-child(7) {
  transform: rotateX(45deg) rotateY(45deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(255, 0, 255, 0.2), rgba(255, 255, 0, 0.1));
}

.crystalFace:nth-child(8) {
  transform: rotateX(-45deg) rotateY(-45deg) translateZ(100px);
  background: linear-gradient(45deg, rgba(255, 255, 0, 0.2), rgba(0, 243, 255, 0.1));
}

.particles {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
}

.particle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
  animation: floatParticle linear infinite;
  box-shadow: 0 0 10px 2px currentColor;
}

.glow {
  position: absolute;
  width: 300px;
  height: 300px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  background: radial-gradient(
    circle at center,
    rgba(0, 243, 255, 0.2) 0%,
    rgba(157, 78, 221, 0.1) 50%,
    transparent 70%
  );
  filter: blur(20px);
  z-index: -1;
  animation: pulse 4s ease-in-out infinite alternate;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
}

@keyframes floatParticle {
  0% {
    transform: translate(0, 0) scale(1);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translate(
      calc((Math.random() - 0.5) * 200px),
      calc((Math.random() - 0.5) * 200px)
    ) scale(0);
    opacity: 0;
  }
}

@keyframes pulse {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.5;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 0.8;
  }
}

/* Responsive styles */
@media (max-width: 768px) {
  .luminaCore {
    width: 150px;
    height: 150px;
  }
  
  .crystalFace {
    width: 150px;
    height: 150px;
  }
  
  .glow {
    width: 250px;
    height: 250px;
  }
}

@media (max-width: 480px) {
  .luminaCore {
    width: 120px;
    height: 120px;
  }
  
  .crystalFace {
    width: 120px;
    height: 120px;
  }
  
  .glow {
    width: 200px;
    height: 200px;
  }
}
